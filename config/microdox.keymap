#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/pointing.h>

// MOD TAB CTRL Z
&mt {
    tapping-term-ms = <150>;
};

// SHIFT AND CAPSLOCK
/ {
    behaviors {
        td1: tap_dance_0 {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_0";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp LSHIFT>, <&kp CAPSLOCK>, <&kp CAPSLOCK>;
        };
    };
    };

/ {
    macros {
        zed_em_kay: zed_em_kay {
            label = "ZM_zed_em_kay";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp HOME>
                , <&macro_press &kp LSHFT>
                , <&macro_tap &kp END>
                , <&macro_release &kp LSHFT>
                , <&macro_tap &kp BSPC>
                ;
        };
        zmk_clear: zmk_clear {
            label = "ZM_zmk_clear";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp C &kp L &kp E &kp A &kp R>
                , <&macro_tap &kp RET>
                ;
        };
    };
};


